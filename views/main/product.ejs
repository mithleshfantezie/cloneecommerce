<% layout('layout') -%>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= product.image %>" alt="">
    </div>
    <div class="col-md-4">
      <h4><%= product.name %></h4>
      <h5>$<%= product.price %></h5>

      <form method="post" action="/product/<%= product._id %>" >
        <div class="btn-group" role="group" aria-label="...">
          <input type="hidden" name="quantity" id="quantity" value="1">
          <button type="button"class="btn btn-default" id="minus">-</button>
          <button type="button"class="btn btn-default" id="total">1</button>
          <button type="button"class="btn btn-default" id="plus">+</button>

        </div>
        <div class="form-group">
          <input type="hidden" name="product_id" id="quantity" value="<%= product._id %>">
          <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>"><br />
          <input type="Text" name="item" class="form-control" value="<%= product.name %>"><br />
          <input type="Text" name="priceValue" id="priceValue" class="form-control" value="<%= product.price %>">
        </div>

        <% if(user) { %>
          <button type="submit" class="btn btn-primary btn-lg">Add to Cart <i class="fa fa-cart-plus"></i></button>
        <% } else { %>
          <a href="/signup" class="btn btn-warning btn-lg">Signup to begin Shoping <i class="fa fa-shopping-cart"></i></a>
        <% } %>
      </form>

    </div>

  </div>

</div>
