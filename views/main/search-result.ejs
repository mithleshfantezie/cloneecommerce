<% layout('layout') -%>



<% if (data.length === 0) { %>
  <h3>Search not Found</h3>
<% } else { %>
  <h3>Result for Query: <%= query %> </h3>
  <div class="container">
    
    <div class="row">

      <% for( var i=0; i< data.length; i++) { %>
        <div class="col-md-4">
          <a href="/product/<%= data[i]._id %>">
            <div class="img-thumbnail">
              <img class="card-img-top" src="<%= data[i]._source.image %>" alt="">
              <br />
              <div class="caption">
                <button type="button" class="btn btn-primary">
                 <%= data[i]._source.name %>
               </button><br>
              <span class="badge badge-pill badge-success">
			  <% for(var j=0; j< categories.length; j++) { %>
			  <% if (data[i]._source.category == categories[j]._id) { %>
				<%= categories[j].name %>
			  <% } %>
			  
			  <% } %>
			  
			  </span>
                <p></p>
                <p><h5><span class="badge badge-secondary">$<%= data[i]._source.price %></span></h5></p>

              </div>

            </div>

          </a>
<br />
        </div>


      <% } %>

    </div>
<br />
  </div>
<% } %>
